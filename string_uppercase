#include<iostream>
using namespace std;
int main()
{
    char s[50];
    cout<<"Enter a String"<<endl;
    cin.getline(s,50);
    int i;
    for(i=0;s[i];i++)
    {
        if(s[i]>='a'&&s[i]<='z')
            s[i]=s[i]-32;
    }

    cout<<"String after converting into uppercase"<<endl;
    for(i=0;s[i];i++)
        cout<<s[i];

    return 0;
}
